<!DOCTYPE html>
<html >
<head>
    <title>購物車</title>
    <!-- bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <!-- navbar -->
    <%- include ("../partials/navbar.ejs") %>

    <div class="container">
        <form id="cartForm">
            <h3>購物車</h3>
            <ul class="list-unstyled" id="cartList">
                <script id="cart-template" type="text/html">
                    <!-- 隱藏id -->
                    <input type="text" class="form-control" id="{{commodityId}}" value="" hidden>
                    <li class="media">
                    <img src="/api/commodity/{{commodityId}}/photo" class="align-self-center mr-3" alt="" width="50" height="50">
                    <div class="media-body">
                        <h5 class="mt-0 mb-1"><a href="/commodity/{{commodityId}}">{{commodityName}}</a></h5>
                        <div>
                            <label for="{{commodityId}}_price">價格:</label><span>{{commodityPrice}}</span>
                        </div>
                        <div>
                            <label for="{{commodityId}}_qty">數量:</label>
                            <input type="number" value="{{commodityQuantity}}" class="purchaseNum" id="{{commodityId}}_qty" max="{{commodityStock}}" aria-describedby="stockHelpInline" required>
                            <small id="stockHelpInline" class="text-muted">還剩{{commodityStock}}件</small>
                            <button type="button" class="btn btn-danger deleteSingleItem" id="{{commodityId}}_deleteSingleItem">刪除</button>
                        </div>
                    </div>
                    </li>
                </script>
              </ul>
            <button type="submit" class="btn btn-primary" id="purchase">購買</button>
        </form>
        <button class="btn btn-danger" id="deleteCart">刪除購物車</button>
    </div>


    <!-- packages -->
    <%- include ("../partials/packages.ejs") %>

    <!-- cartList.js -->
    <script src="/js/cartList.js"></script>

    

</body>
</html>