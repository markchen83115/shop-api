<!DOCTYPE html>
<html>
<head>
    <title>註冊</title>
    <!-- bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
  <!-- navbar -->
  <%- include ("../partials/navbar.ejs") %>

  <div class="container"> 
    <form id="register">
      <h1>註冊</h1>
      <div class="form-group">
        <label for="account">帳號:</label>
        <input type="text" class="form-control" id="account" required>
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" aria-describedby="emailHelp" required>
      </div>
      <div class="form-group">
        <label for="phone">手機:</label>
        <input type="text" class="form-control" id="phone">
      </div>
      <div class="form-group">
        <label for="password">密碼:</label>
        <input type="password" class="form-control" id="password" pattern="^(?=.*[a-z])(?=.*\d).{8,12}$" title="密碼必須為8-12位英數字元" required>
        <small id="passwordHelpBlock" class="form-text text-muted">
          密碼必須為8-12位英數字元
        </small>
      </div>
      <div class="form-group">
        <label for="name">姓名:</label>
        <input type="text" class="form-control" id="name">
      </div>
      <fieldset class="form-group">
        <div class="row">
          <legend class="col-form-label col-sm-1 pt-0">性別:</legend>
          <div class="col-sm-10">
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="gender" id="male" value="male">
              <label class="form-check-label" for="male">
                男
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="gender" id="female" value="female">
              <label class="form-check-label" for="female">
                女
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="gender" id="other" value="other" checked>
              <label class="form-check-label" for="other">
                其他
              </label>
            </div>
          </div>
        </div>
      </fieldset>

      <div class="form-row">
        <legend class="col-form-label col-sm-1 pt-4">出生日期:</legend>
        <div class="form-group">
          <label for="birthdayYear">年</label>
          <select class="form-control" id="birthdayYear">
            <option value="na">Year</option>
            <% for(let i = 1920; i <= 2020; i++ ) { %>
              <option value="<%= i %>"><%= i %></option>
            <% }; %>
          </select>
        </div>
        <div class="form-group">
          <label for="birthdayMonth">月</label>
          <select class="form-control" id="birthdayMonth">
            <option value="na">Month</option>
            <option value="1">January</option>
            <option value="2">February</option>
            <option value="3">March</option>
            <option value="4">April</option>
            <option value="5">May</option>
            <option value="6">June</option>
            <option value="7">July</option>
            <option value="8">August</option>
            <option value="9">September</option>
            <option value="10">October</option>
            <option value="11">November</option>
            <option value="12">December</option>
          </select>
        </div>
        <div class="form-group">
          <label for="birthdayDay">日</label>
          <select class="form-control" id="birthdayDay">
            <option value="na">Day</option>
            <% for(let i = 1; i <= 31; i++) { %>
            <option value=<%= i %>><%= i %></option>
            <% } %>
          </select>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">註冊</button>
    </form>
  </div>

  <!-- packages -->
  <%- include ("../partials/packages.ejs") %>

  <!-- userRegister.js -->
  <script src="/js/userRegister.js"></script>
      
</body>
</html>